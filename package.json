{
  "name": "mutatio.mortuorum",
  "version": "1.0.0",
  "description": "A L4D2 mod manager",
  "main": "./out/main/index.js",
  "exports": "./out/main/index.js",
  "author": "Eduardo-Cerqueira",
  "homepage": "https://github.com/Eduardo-Cerqueira/mutatio-mortuorum",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "GPL-3.0-only",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win --config  electron-builder.config.cjs",
    "build:linux": "electron-vite build && electron-builder --linux --config electron-builder.config.cjs",
    "drizzle:generate": "npx drizzle-kit generate",
    "commit": "cz"
  },
  "dependencies": {
    "better-sqlite3": "11.0.0",
    "steamworks.js": "0.3.2"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "2.0.0",
    "@electron-toolkit/eslint-config-ts": "1.0.1",
    "@electron-toolkit/preload": "3.0.0",
    "@electron-toolkit/tsconfig": "1.0.1",
    "@electron-toolkit/utils": "3.0.0",
    "@mantine/core": "7.10.1",
    "@mantine/hooks": "7.10.1",
    "@mantine/modals": "7.10.1",
    "@mantine/notifications": "7.10.1",
    "@swc/core": "1.4.11",
    "@tabler/icons-react": "3.5.0",
    "@types/node": "18.19.34",
    "@types/react": "18.2.79",
    "@types/react-dom": "18.2.25",
    "@types/react-window": "1.8.8",
    "@vitejs/plugin-react": "4.2.1",
    "autoprefixer": "10.4.19",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "drizzle-kit": "0.21.4",
    "drizzle-orm": "0.30.10",
    "electron": "30.1.0",
    "electron-builder": "24.13.3",
    "electron-store": "9.0.0",
    "electron-vite": "2.3.0",
    "eslint": "8.57.0",
    "eslint-plugin-react": "7.34.2",
    "postcss": "8.4.38",
    "postcss-preset-mantine": "1.15.0",
    "postcss-simple-vars": "7.0.1",
    "prettier": "3.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-window": "1.8.10",
    "typescript": "5.4.5",
    "vite": "5.2.13"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
